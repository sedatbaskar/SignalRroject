@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" onsubmit="save()">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımızda Yazısı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlığını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title" />
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Görselin URL'sini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" />
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklamayı Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Hakkımızda Yazısını Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function save() {
        var Title = document.getElementById('Title').value;
        var ImageUrl = document.getElementById('ImageUrl').value;
        var Description = document.getElementById('Description').value;

        if (Title != "" && ImageUrl != "" && Description != "") {
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Hakkında Yazısı Eklendi.",
                showConfirmButton: false,
                timer: 50000
            });
        } else {
            // Show an error message if passwords don't match
            Swal.fire({
                position: "top-end",
                icon: "error",
                title: "Alanlar Boş Geçilemez!",
                showConfirmButton: false,
                timer: 50000
            });
        }
    }
</script>