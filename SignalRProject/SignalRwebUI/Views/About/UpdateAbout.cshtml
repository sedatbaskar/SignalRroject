@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="AboutID" />
                            <div class="form-group">
                                <label for="Title">Başlığını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title" />
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Görselin URL'sini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" />
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklamayı Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Hakkımızda Yazısını Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
