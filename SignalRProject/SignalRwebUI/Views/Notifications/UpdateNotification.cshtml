@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" onsubmit="save()">
                    <div class="card">
                        <input type="hidden" asp-for="NotificationID" />
                        <div class="card-header">
                            <div class="card-title">Bildirim Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Type">Bildirimi Türü</label>
                                <input type="text" class="form-control" asp-for="Type" id="Type" />
                            </div>
                            <div class="form-group">
                                <label for="Icon">Bildirim Icon</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon" />
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Bildirimi Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

