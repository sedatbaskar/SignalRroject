@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <div class="card-title"> İletişim Bilgisi Güncelleme Sayfası</div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <input type="hidden" asp-for="ContactID" />
                <label for="Location">Adres</label>
                <input type="text" class="form-control" asp-for="Location" id="Location" />
            </div>
            <div class="form-group">
                <label for="Mail">Mail Adresi</label>
                <input type="email" class="form-control" asp-for="Mail" id="Mail" />
            </div>
            <div class="form-group">
                <label for="Phone">Telefon:</label>
                <input type="text" class="form-control" asp-for="Phone" id="Phone" />
            </div>
            <div class="form-group">
                <label for="Mail">Alt Başlık Giriniz</label>
                <input type="FooterTitle" class="form-control" asp-for="FooterTitle" id="FooterTitle" />
            </div>
            <div class="form-group">
                <label for="FooterDescription"> Açıklama</label>
                <input type="text" class="form-control" asp-for="FooterDescription" id="FooterDescription" />
            </div>
            <div class="form-group">
                <label for="FooterDescription"> Açık Günler</label>
                <input type="OpenDays" class="form-control" asp-for="OpenDays" id="OpenDays" />
            </div>
            <div class="form-group">
                <label for="FooterDescription"> Açık Günler Açıklama</label>
                <input type="OpenDaysDescription" class="form-control" asp-for="OpenDaysDescription" id="OpenDaysDescription" />
            </div>
            <div class="form-group">
                <label for="FooterDescription"> Açık Saatler</label>
                <input type="OpenHours" class="form-control" asp-for="OpenHours" id="OpenHours" />
            </div>

            <div class="card-action">
                <!-- Form gönderme butonu -->
                <button type="submit" class="btn btn-primary">İletişim Bilgisi Güncelle</button>
            </div>
        </div>
    </div>
</form>
