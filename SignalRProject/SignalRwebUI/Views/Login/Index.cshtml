@model LoginDto


@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>SignalR Restourant Giriş Sayfası</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/burger9_01.jpg" width="484" height="684" alt="form">
			</div>
			<form class="form-detail" method="post">
				<h2> Kullanıcı Giriş Ekranı</h2>
				
				<div class="form-row">
					<input type="text" name="Username" id="Username" class="input-text" placeholder="Kullanıcı Adınız" required asp-for="Username">
				</div>
				<div class="form-row">
					<input type="password" name="password" id="password" class="input-text" placeholder="Şifreniz" asp-for="Password" required>
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Giriş Yap">
				</div>
			</form>
		</div>
	</div>
</body>
</html>